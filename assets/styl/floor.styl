@keyframes keep-rotate
  0%
    transform rotate(0)
  100%
    transform rotate(360deg)

cardilize()
  background rgba(#6c6c6c, 25%)
  backdrop-filter blur(5px)
  border-radius 20px
  transition all 0.2s ease-in-out
  border-left #e5e5e500 1px solid
  border-top #ececec00 1px solid
  border-right #9a9a9a00 1px solid
  border-bottom #a9a9a900 1px solid
  box-shadow: 2px 5px 5px transparent;
  &:hover
    border-left #e5e5e5 1px solid
    border-top #ececec 1px solid
    border-right #9a9a9a 1px solid
    border-bottom #a9a9a9 1px solid
    box-shadow: 2px 5px 5px black;
    backdrop-filter blur(20px)

a()
  a
    user-select none
    position relative
    transition color 0.2s ease-in-out

  a:before
    position absolute
    content ""
    width 100%
    height 68%
    border-bottom #94c9fd 1px solid
    max-width 0
    transition max-width 0.2s ease-in-out

  a:hover
    color #94c9fd
    &:before
      max-width 100%

.clipper-border
  transition all ease-in-out 0.2s
  border-top #a9a9a9 1px solid
  border-right #e5e5e5 1px solid
  top 260px
  height 50px
  width 165px
  left 20px
  border-radius 0 20px 0 0
  position absolute
  background linear-gradient(to bottom, black, transparent 5px)
  opacity 0

  &:before
    content ""
    display inline-block
    width 38px
    height 38px
    border-radius 19px
    border-left #e5e5e5 1px solid
    border-top #ececec 1px solid
    border-right #9a9a9a 1px solid
    border-bottom #a9a9a9 1px solid
    position relative
    bottom 40px
    right 20px
    box-shadow: 2px 5px 5px black;
    clip-path polygon(0 calc(100% + 5px), 50% calc(100% + 5px), 48% 50%, 0 50%)

  &:after
    content ""
    display inline-block
    width 38px
    height 38px
    border-radius 19px
    position absolute
    right -40px
    bottom -18px
    border-left #e5e5e5 1px solid
    border-top #ececec 1px solid
    border-right #9a9a9a 1px solid
    border-bottom #a9a9a9 1px solid
    box-shadow: 2px 5px 5px black;
    clip-path polygon(0 calc(100% + 5px), 50% calc(100% + 5px), 48% 50%, 0 50%)

#wrapper
  width 850px
  margin-left auto
  margin-right auto
  min-height calc(100vh - 125px)  // footer
  margin-bottom 50px

  #post
    margin-top 25vh
    width 100%
    height calc(100% - 25vh)
    display flex
    flex-direction column
    gap 10px

    #jump-2
      margin-top  10px

    #jump, #jump-2
      flex 0 1 50px
      width calc(100% - 40px)
      display flex
      gap 10px
      align-items center
      padding-left 20px
      padding-right 20px
      cardilize()
      a()
      a
        line-height 40px
      div
        user-select none
        flex-grow 1000
        display flex
        gap 5px
        flex-direction row-reverse
        align-items center
        .number
          color #ff8441
        input
          width 20px
          background #00000044
          outline none
          border whitesmoke 1px solid
          border-radius 10px
          padding-left 6px
          padding-right 5px
          padding-top 3px
          text-align center
          transition border ease-in-out 0.2s
          &:focus
            border #ff8441 1px solid

#content
  height 100%
  display flex
  flex-direction column
  transition filter ease-in-out 0.5s, opacity ease-in-out 0.5s

.floor-wrapper
  position relative

.floor-main
  cardilize()
  padding 20px
  display flex
  min-height 220px
  gap 30px

  &:before
    content url("../CornerDecoration.svg")
    display inline-block
    position absolute
    width 100px
    height 100px
    right -52px
    top -52px
    transform scale(0.1) rotate(90deg)
    filter: invert(100%) drop-shadow(15px -10px 20px #000000);

  .author
    padding-left 20px
    display flex
    justify-content space-around
    flex-direction column
    overflow visible
    max-height 220px
    max-width: 120px;
    align-items center

    .dummy_img
      overflow visible
      img
        user-select none
        user-drag: none;
        -webkit-user-drag: none;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        width 100px
        height 100px
        border-radius 60px
        border whitesmoke 4px solid
        transition transform 0.3s ease-in-out
        &:hover
          transform rotate(360deg) scale(1.1)

      &:before
        border 4px transparent solid
        content ""
        z-index -1
        display inline-block
        position: absolute
        height 100px  // 8px border
        width 100px
        clear both
        border-radius 60px
        box-shadow 2px 4px 3px black
        transition transform 0.3s ease-in-out

      &:hover:before
        transform scale(1.1)

    .author-username
      font-size 1.2rem
      text-align center
      margin-top 10px
      text-shadow #00000000 1px 0 2px

    .hl
      &:before
        z-index -1
        overflow hidden
        white-space nowrap
        display inline-block
        content attr(content)
        position absolute
        font-size 1.2rem
        color #85d3c800
        border-bottom 1px dashed whitesmoke
        -webkit-text-stroke-width: 1px;
        -webkit-text-stroke-color: #404398;
        max-width 0
        transition max-width 0.2s ease-in-out
        text-shadow whitesmoke 0 0 4px

      &:hover:before
        max-width 120px

    .tieba-level-container
      text-align center
      border whitesmoke 1px solid
      line-height 2rem
      border-radius 1.2rem
      max-width 130px
      transition transform 0.2s ease-in-out
      white-space nowrap

      &:hover
        transform scale(1.1)

      .tieba-rank
        margin-left 10px

      .tieba-level
        font-size 0.9rem
        display inline-block
        width 20px
        height 2rem
        padding-left 5px
        margin-right 10px

        &:after
          float right
          z-index -1
          position relative
          content ""
          display inline-block
          width 21px
          height 21px
          background #40439899
          border-radius 11px
          bottom calc(2rem - 3px)
          left 2px
          border whitesmoke 1px solid

      span
        padding-top 3px

  .separation-segment
    background-image linear-gradient(to bottom, whitesmoke 50%, transparent 50%)
    background-size 2px 8px
    //border-right whitesmoke 2px solid
    min-width 1px
    border-radius 50%
    max-height 210px
    translate 0 10px

    &:before
      font var(--fa-font-solid)
      content "\f0c4"
      display inline-block
      position absolute
      translate calc(-50% + 1px) -10px
      transform rotate(90deg)
      text-shadow black 2px -1px 2px
      transition transform 0.5s ease-in-out

    &:hover:before
      transform rotate(90deg) translateX(200px)

  .post-content
    flex-grow: 100;
    display flex
    flex-direction column
    padding-top 10px
    padding-right 10px
    gap 10px

    &:before
      content ""
      position absolute
      display inline-block
      height calc(80% - 75px)
      right 13px
      translate 0 65px
      width 4px
      background linear-gradient(to right, #f0f0f0 0% 25%, transparent 25% 75%, #f0f0f0 75% 100%)
      border-radius 50% 10%

    .main
      flex-grow 100
      padding-top 10px
      &:before
        content ""
        position absolute
        display inline-block
        width 500px
        right 100px
        translate 0 -27px
        height 4px
        background linear-gradient(to bottom, #f0f0f0 0% 25%, transparent 25% 75%, #f0f0f0 75% 100%)
        border-radius 50% 10%

    .meta
      height 30px
      display flex
      gap 10px
      float right
      flex-direction row-reverse

      a
        color #94c9fd
        position relative
        &:before
          content ""
          position absolute
          display inline-block
          width 0
          height 65%
          border-bottom currentColor 1px solid
          transition width 0.2s ease-out
        &:hover:before
          width 100%

.reply-wrapper
  margin-top 10px
  width 100%
  float right
  display flex
  flex-direction column
  gap 10px
  padding-bottom 10px

  .reply
    cardilize()
    display flex
    position: relative

    &:before
      content ""
      position absolute
      width calc(100% - 45px)
      height calc(100% - 20px)
      clip-path polygon(0 85px, 0 100%, calc(100% - 160px) 100%)
      border 1px dashed whitesmoke
      right 0
      border-radius 20px

    &:after
      animation linear infinite keep-rotate 3s
      font var(--fa-font-solid)
      content "\f863"
      display inline-block
      position absolute
      top 75px
      left 35px
      text-shadow black 2px -1px 2px

    .reply-pfp
      margin 20px
      width 40px
      height 40px
      border-radius 10px
      border whitesmoke 2px solid
      box-shadow: 1px 3px 5px #101010;
      transition all ease-in-out 0.2s
      user-select none
      user-drag: none;
      -webkit-user-drag: none;
      user-select: none;
      -moz-user-select: none;
      -webkit-user-select: none;
      -ms-user-select: none;

      &:hover
        transform scale(1.1)
        box-shadow: 2px 5px 5px black;

    .flex-wrapper
      width 100%
      display flex
      flex-direction column
      margin-top 20px
      margin-right 20px
      margin-bottom 10px
      gap 20px

      .reply-timestamp
        text-align right

      .content-wrapper
        .reply-author
          color #94c9fd

          &:after
            content ": "
            display inline-block
            height calc(1rem + 32px)
            color whitesmoke
            vertical-align bottom
            translate 0 23px

          &:before
            z-index -1
            white-space nowrap
            display inline-block
            content attr(content)
            position absolute
            color #85d3c800
            border-bottom 1px dashed whitesmoke
            -webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: #404398;
            height 22px
            max-width 0
            overflow hidden
            transition max-width 0.2s ease-in-out
            text-shadow whitesmoke 0 0 4px
            top calc(1rem + 30px)

          &:hover:before
            max-width 200px

.lzl
  width 662px
  float right
  overflow hidden
  transition max-height 0.5s ease-in-out

  .lzl-tp-container
    cardilize()
    height 40px
    width calc(100% - 2px)
    float right
    display flex
    line-height 40px

    .tp-numbers
      padding-left 30px
      display flex
      gap 10px
      flex-grow 1000
      translate 0 1px

    .tp-instructions
      padding-right 30px
      display flex
      gap 10px
      translate 0 1px

    a()

.current-page
  color #94c9fd

.lzl-page
  overflow hidden

.post-img
  margin-top 10px
  border-radius 20px

.comment-img
  max-width 95%
  border-radius 20px

.page
  display flex
  flex-direction column
  overflow hidden
  padding-right 10px
  padding-top 10px
  gap 20px
